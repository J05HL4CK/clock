#:kivy 2.1.0

<Label>:
    font_size: 60
    markup: True

<Button>:
    font_size: 25
    bold: True
BoxLayout:
    orientation: 'vertical'
    

    Label:
        id: time
        text: "[color=00ff33][b]00:00[/b]:00[/color]"
        font_size: 60
        markup: True
        

    BoxLayout:
        orientation: 'horizontal'
        padding: 20
        spacing: 20
        height: 90
        size_hint: (1, None)



        Button:
            id: start_button
            text: "Start"
            font_size: 25
            bold: True
            border: (2,2,2,2)
            background_color: (0,1,0,1) if self.state == "normal" else (0,124,0,1)
            
        
        Button:
            id: stop_button
            text: "Stop"
            font_size: 25
            bold: True
            border: (2,2,2,2)
            background_color: (1,0,0,1) if self.state == "normal" else (148,0,0,1)
        
        Button:
            id: reset_button
            text: "Reset"
            font_size: 25
            bold: True
            border: (2,2,2,2)

    Label:
        id: counter
        text: '00:00'
        font_size: 60
