#:kivy 2.1.0
<Label>:
    font_size: 60
    markup: True

<Button>:
    font_size: 25
    bold: True
    color: '#ffffff'


BoxLayout:
    orientation: 'vertical'

    Label:
        id: counter
        text: '25:00'
        font_size: 60


    BoxLayout:
        orientation: 'horizontal'
        padding: 20
        spacing: 20
        height: 90
        size_hint: (1, None)

        Button:
            text: 'Start'
            id: start_button
            background_color: (0,1,0,1) if self.state == "normal" else (0,124,0,1)
            border: (2,2,2,2)
            on_press: app.toggle_state()
        

        Button:
            id: reset_button
            text: "Reset"
            font_size: 25
            bold: True
            border: (2,2,2,2)
            background_color: (1,0,0,1) if self.state == "normal" else (148,0,0,1)
            on_press: app.reset()

    Label:
        id: time
        text: '[b]00[/b]:00'
        font_size: 30
        color: '#00ff33'